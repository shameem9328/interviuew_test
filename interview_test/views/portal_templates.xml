<?xml version="1.0" encoding="utf-8"?>
<odoo>


<template id="portalpages">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Add  Details</t>
            <h3>Add Details</h3>
             <t t-if="st==True">
       <div class="alert alert-success alert-dismissable">
   		 <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            Successfully submitted.
        </div>
      	</t>
            <form  method="post" autocomplete="on">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="form-group fieldGroup">
                
                <div class="row o_portal_details">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-lg-12">
                              <div t-if="error_message" class="alert alert-danger" role="alert">
                                  <t t-foreach="error_message" t-as="err"><t t-esc="err"/><br /></t>
                              </div>
                            </div>
                            <div t-attf-class="form-group col-xl-6">
                                <label class="col-form-label" for="name">Your Name</label>
                                <input type="text"  required="True"  name="name"  t-attf-class="form-control"/>
                            </div>
                            
                            <div t-attf-class="form-group  col-xl-6">
                                <label class="col-form-label" for="mobile">Mobile</label>
                                <input type="tel"  name="mobile" t-attf-class="form-control" />
                            </div>
                            
                            <div class="clearfix" />
                       
                          
			                    <div t-attf-class="form-group  col-xl-6">
			                   <label class="col-form-label">Select customers</label>

                                    <select  name="cutomers"  id="cutomers" class="js-example-placeholder-single js-states form-control">
                                    <t t-foreach="customerlist  or []" t-as="code">
	            <option t-att-value="code.id" t-att-id="code.id"><t t-esc="code.name"/></option>
                                    </t>
                            </select>
                            <input  type="hidden" id="partnercode" name="partnercode" t-attf-class="form-control" />

			</div>
       
                        </div>
                        </div>
                   
                    </div>
                </div>
                   
                
                  <div class="clearfix">
                            <button type="submit" class="btn btn-primary float-right mb32 ">
                                Confirm
                                <span class="fa fa-long-arrow-right" />
                            </button>
                  </div>
            </form>
        </t>
    </template>

  
   <record id="menu_website_video_upload" model="website.menu">
        <field name="name">My page</field>
        <field name="url">/get_interview_test_form</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>



   
</odoo>
